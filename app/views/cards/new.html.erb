
<% if user_signed_in? %>

<div id="form_errors">
  <% if @card.errors.any? %>
    <ul>
      <% @card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <%end%>
</div>

<%= form_for @card do |f| %>
       <%= f.label :front %>
       <%= f.text_field :front %>

      <%= f.label :flip %>
      <%= f.text_field :flip %>

    <%= f.submit "Create" %>
<% end %>

<% else %>

  <%= "You must be signed in." %>

<% end %>
